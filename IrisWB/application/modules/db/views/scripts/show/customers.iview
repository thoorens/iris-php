{wbHeader()}
<div class="content" {wbBG()}>
    {foreach(customers,customer)}
        <h3>{(customer['Name'])}</h3>
        <ul>
            {assign(invoices,$customer['Inv'])}
            {foreach(invoices,invoice)}
                <li>
                    Invoice #{(invoice['Number'])} <i>({simpleDate($invoice['Date'])})</i>
                </li>
            {/foreach}
        </ul>
    {/foreach}
    {dbWarning()}
</div>